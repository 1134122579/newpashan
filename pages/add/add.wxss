.add-type {
    color: #000;
    display: flex;
    font-family: PingFang SC;
    font-size: 26rpx;
    font-weight: 400;
    justify-content: space-between;
    line-height: 36rpx;
    opacity: 1;
    padding: 26rpx 30rpx;
}

.add-detail {
    background-color: #fff;
    margin: 20rpx 0;
}

.picker {
    display: flex;
    justify-content: space-between;
}

.picker-date {
    width: 690rpx;
}

.entry-select-option,.type-select-option {
    display: flex;
}

.createDone {
    background: #377cd4;
    border-radius: 6rpx;
    color: #fff;
    font-family: PingFang SC;
    font-size: 26rpx;
    font-weight: 400;
    height: 80rpx;
    line-height: 80rpx;
    opacity: 1;
    text-align: center;
    width: 694rpx;
}

.read-words {
    font-size: 28rpx;
    line-height: 1.4;
    width: 650rpx;
}

.read {
    align-items: center;
    color: #acacac;
    display: flex;
    font-family: PingFang SC;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 28rpx;
    margin: 20rpx auto;
    opacity: 1;
    display: flex;
    justify-content: flex-start;
    /* width: 60rpx; */
}

.bot-part {
    bottom: calc(env(safe-area-inset-bottom));
    left: 50%;
    margin-bottom: 80rpx;
    position: fixed;
    transform: translate(-50%,0);
}

.response {
    position: absolute;
    z-index: 12;
}

