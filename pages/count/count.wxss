/* pages/count/count.wxss */
page {
  display: flex;
  flex-direction: column;
  position: relative;
}

.countPage {
  flex: 1;
  overflow-y: auto;
  padding-bottom: 50px;
}

.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background: #ffffff;
  padding: 20rpx;
}

.name {
  /* flex: 1; */
  width: 19%;
  text-align: center;
  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.dt {
  border: 1px solid #367CD5;
  border-radius: 30rpx;
  color: #367CD5;
  font-size: 14px;
}

.newJY {
  color: #ff0000;
  font-size: 14px;
}

.content {
  padding: 20rpx;
  background: #fff;
  margin: 20rpx;
}

.title {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20rpx;

}

.title_l {
  font-size: 14px;
  font-weight: 600;
  padding-left: 20rpx;
  border-left: 2px solid #333;
}

.title_r {
  display: flex;
  justify-content: center;
  align-items: center;
  color: #cccccc;
}

.trh,
.tr {
  display: flex;
  justify-content: space-around;
  align-items: center;
  padding: 10rpx 0;
}

.th,
.td {
  width: 20%;
  text-align: center;
  flex-shrink: 0;
  /* overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap; */
}

.td {
  padding: 20rpx 0;
}

.flooter {
  position: fixed;
  bottom: 0;
  width: 100%;
  padding: 30rpx 0;
  display: flex;
  justify-content: center;
  align-items: center;
  background: #fff;
  /* padding-bottom: constant(safe-area-inset-bottom); 兼容 IOS<11.2 */
  /* padding-bottom: env(safe-area-inset-bottom);  兼容 IOS>11.2 */
}

.block {
  width: 50%;
  text-align: center;
  /* padding: 10px 0; */
  color: #367CD5;
}

.title_time {
  text-align: center;
  background: #cccccc;
  color: #fff;
  display: inline-block;
  margin: 20rpx auto;
  padding: 8rpx 20rpx;
  border-radius: 30rpx;
  font-size: 12px;
}

.block {
  width: 100%;
}

.isNulist {
  display: flex;
  justify-content: center;
  align-items: center;
  flex: 1;
  height: 100%;
}

.listnull {
  padding: 20rpx;
  text-align: center;
  font-size: 14px;
  color: #ccc;
}

.backgroundred {
  background: #e72828;
}

.textRukou {

  overflow: hidden;
  text-overflow: ellipsis;
  white-space: nowrap;
}

.jysize {
  width: 100%;
  text-align: right;
  font-size: 24rpx;
  color: #ccc;
}

/* 打卡 */
.header_btton {
  display: flex;
  justify-content: center;
  align-items: center;
  width: 100%;
  padding: 20rpx 0;
}

.dk_time {
  background: #367CD5;
  padding: 6rpx 20rpx;
  margin: 0 20rpx;
  border-radius: 40rpx;
  color: #fff;
  font-size: 24rpx;
}

.Dk {
  width: 150rpx;
  height: 150rpx;
  border-radius: 50%;
  color: #fff;
  background: #367CD5;
  line-height: 150rpx;
}

.DKTimeStyle {
  width: 32%;
  flex-shrink: 0;
  text-align: left;
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.DKTimeStyle_t {
  color: #333;
  line-height: 2;
}

.isnullbuttonDk {
  flex: 1;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  margin-top: 20rpx;
}

.isnullbuttonDk .Dk {
  width: 180rpx;
  height: 180rpx;
  line-height: 180rpx;

}

/* 记录 */
.block .olgstyle {
  height: 80px;
  width: 52%;
  text-align: right;
  font-size: 24rpx;
  display: flex;
  justify-content: space-between;
  align-items: flex-end;
  flex-direction: column;
}
.olgstyle .textRukou{
  color: #367CD5;
}
.olg{
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items:center;
}
.olg .name{
  width: 100%;
  margin-top: 18rpx;
}
.descolg{
  width: 100%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
}
.counttitle{
  width: 100%;
  text-align: center;
  font-weight: 600;
  font-size: 38rpx;
  background: #ffffff;
  padding: 10px 0;
  position: fixed;
  top: 0;
}