.scan-state-box {
    background-color: #fff;
    color: #7b7b7b;
    display: flex;
    font-size: 48rpx;
    font-weight: 400;
    justify-content: center;
    margin: 20rpx 0;
    padding: 70rpx 0;
}

.scan-state {
    height: 70rpx;
    margin: 0 20rpx;
    width: 70rpx;
}

.scan-detail {
    background-color: #fff;
}

.scan-type {
    display: flex;
    justify-content: space-between;
    padding: 28rpx 30rpx;
}

.scan-title {
    color: #000;
}

.scan-info,.scan-title {
    font-family: PingFang SC;
    font-size: 26rpx;
    font-weight: 400;
    line-height: 36rpx;
    opacity: 1;
}

.scan-info {
    color: #c9cacd;
}

.scan-nextcode {
    background: #4e63a9;
    border-radius: 6rpx;
    bottom: calc(env(safe-area-inset-bottom));
    color: #fff;
    font-family: PingFang SC;
    font-size: 26rpx;
    font-weight: 400;
    height: 80rpx;
    left: 50%;
    line-height: 80rpx;
    margin-bottom: 80rpx;
    opacity: 1;
    position: fixed;
    text-align: center;
    transform: translate(-50%,0);
    width: 694rpx;
}