.popup {
    height: 161rpx;
    position: fixed;
    right: 0rpx;
    top: 0;
    width: 502rpx;
}

.detail-type {
    color: #000;
    display: flex;
    font-family: PingFang SC;
    font-size: 26rpx;
    font-weight: 400;
    justify-content: space-between;
    line-height: 36rpx;
    opacity: 1;
    padding: 26rpx 30rpx;
}

.detail-detail {
    background-color: #fff;
    margin: 20rpx 0;
}

.refresh,.title-desc {
    color: #646566;
    font-family: PingFang SC;
    font-size: 20rpx;
    font-weight: 400;
    line-height: 28rpx;
    opacity: 1;
}

.refresh {
    border: 2rpx solid #646566;
    display: inline-block;
    margin-left: 71%;
    margin-right: 30rpx;
    padding: 5rpx 10rpx;
    text-align: right;
}

.teammates {
    background-color: #fff;
    flex-direction: column;
    margin: 20rpx 0;
    padding: 28rpx 30rpx;
}

.teammates,.teammates-detail {
    display: flex;
}

.teammates-detail {
    justify-content: space-between;
    margin: 10rpx 0;
    width: 100%;
}

.teammates-fullname {
    color: #000;
}

.teammates-fullname,.teammates-phone {
    font-family: PingFang SC;
    font-size: 26rpx;
    font-weight: 400;
    line-height: 36rpx;
    opacity: 1;
}

.teammates-phone {
    color: #c8c8c8;
}

.teammates-del {
    height: 26rpx;
    margin: 0 8rpx;
    width: 22rpx;
}

.leader-approve {
    background: #4e63a9;
    margin-bottom: 80rpx;
}

.leader-approve,.leader-cancel {
    border-radius: 6rpx;
    bottom: calc(env(safe-area-inset-bottom));
    color: #fff;
    height: 80rpx;
    left: 50%;
    line-height: 80rpx;
    opacity: 1;
    position: fixed;
    text-align: center;
    transform: translate(-50%,0);
    width: 694rpx;
}

.leader-cancel {
    background: #c8c8c9;
    margin-bottom: 180rpx;
}

.join {
    background: #4e63a9;
}

.join,.leave {
    border-radius: 6rpx;
    bottom: calc(env(safe-area-inset-bottom));
    color: #fff;
    height: 80rpx;
    left: 50%;
    line-height: 80rpx;
    margin-bottom: 80rpx;
    opacity: 1;
    position: fixed;
    text-align: center;
    transform: translate(-50%,0);
    width: 694rpx;
}

.leave {
    background: #57be6a;
}

.read-words {
    font-size: 34rpx;
    line-height: 44rpx;
    width: 530rpx;
}

.read {
    align-items: center;
    bottom: calc(env(safe-area-inset-bottom));
    color: #acacac;
    display: flex;
    font-family: PingFang SC;
    font-size: 24rpx;
    font-weight: 400;
    line-height: 28rpx;
    margin-bottom: 180rpx;
    opacity: 1;
    transform: translate(-50%,0);
    width: 640rpx;
}

.rc,.read {
    left: 50%;
    position: fixed;
}

.rc {
    background-color: #fff;
    border-radius: 30rpx;
    height: 1100rpx;
    padding: 40rpx;
    top: 50%;
    transform: translate(-50%,-50%);
    width: 80%;
}

.rct {
    font-size: 36rpx;
    font-weight: 700;
    margin: 30rpx auto;
    text-align: center;
}

.rcdw {
    font-size: 30rpx;
    font-weight: 400;
    margin: 0 auto;
    text-indent: 2em;
    width: 86%;
}

.rcdws {
    color: red;
}

.rcdb {
    background: linear-gradient(132deg,#344388,#566db3);
    border-radius: 10rpx;
    color: #fff;
    font-weight: 700;
    margin: 30rpx auto;
    padding: 20rpx 0;
    text-align: center;
    width: 450rpx;
}

.mask {
    background-color: rgba(0,0,0,.3);
    height: 1800rpx;
    width: 100%;
    z-index: 3;
}