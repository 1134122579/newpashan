.container,page {
    height: 100%;
}

.container {
    box-sizing: border-box;
    display: flex;
    flex-direction: column;
    padding: 10px 20px;
}

.container .title {
    font-size: 36px;
    margin-bottom: 10px;
    text-align: left;
}

.container .info {
    color: grey;
    font-size: 14px;
    line-height: 18px;
    margin-bottom: 40px;
    text-align: left;
}

.container .image-wrapper image {
    width: 100%;
}

.generate-btn {
    margin-top: 40px;
}

.share-canvas {
    background: transparent;
    height: 100%;
    width: 100%;
}