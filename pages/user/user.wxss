.user-box {
    background-color: #fff;
    margin: 20rpx 0;
}

.user-avatar {
    border-radius: 150rpx;
    height: 108rpx;
    width: 108rpx;
}

.user-type {
    align-items: center;
    display: flex;
    justify-content: space-between;
    padding: 28rpx 30rpx;
}

.user-more {
    height: 25rpx;
    width: 25rpx;
}

.user-title {
    color: #000;
}

.user-info,.user-title {
    font-family: PingFang SC;
    font-size: 26rpx;
    font-weight: 400;
    line-height: 36rpx;
    opacity: 1;
}

.user-info {
    color: #c9cacd;
    text-align: right;
}