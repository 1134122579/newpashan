page {
    background-color: #f6f6f6;
    padding-bottom: 60rpx;
}

.t1-title {
    font-size: 40rpx;
    font-weight: 700;
    margin: 20rpx auto;
}

.t1-banner {
    height: 200rpx;
    margin: 30rpx auto;
    width: 624rpx;
}

.t1-img {
    margin: 0 auto;
    width: 624rpx;
}

.t1-content-words {
    font-size: 28rpx;
    margin: 30rpx auto;
    width: 550rpx;
}

.t1-nav {
    display: flex;
    font-size: 26rpx;
    justify-content: space-between;
}

.t1-name {
    color: #576b95;
}

.t1-date {
    color: #b7b7cf;
}

.t1-number {
    display: inline-block;
    font-size: 40rpx;
    font-weight: 700;
}

.t1-line {
    background-color: #b7b7cf;
    height: 2rpx;
    margin: 15rpx auto;
    width: 120rpx;
}

.t1-para {
    display: flex;
    flex-direction: column;
    margin: 0rpx auto 30rpx;
    text-align: center;
}

.t1-para-name {
    display: inline-block;
    font-size: 40rpx;
    font-weight: 700;
}

.t1-dec {
    background-color: #527fff;
    border-radius: 20rpx;
    height: 20rpx;
    width: 20rpx;
}

.t1-content-detail {
    align-items: center;
    display: flex;
}

.article-box {
    margin: 0 auto;
    width: 624rpx;
}

.t2-title {
    font-size: 40rpx;
    font-weight: 700;
    margin: 30rpx auto;
}

.t2-img {
    margin: 0 auto;
    width: 624rpx;
}

.t2-text {
    font-size: 28rpx;
    width: 624rpx;
}

.t2-text,.t5b {
    margin: 30rpx auto;
}

.t5b {
    width: 95%;
}

.t5bf {
    color: rgba(0,0,0,.4);
    display: flex;
    justify-content: space-between;
    margin: 30rpx auto;
    width: 90%;
}

.t5bt {
    font-size: 40rpx;
    font-weight: 700;
    margin: 0 auto;
    width: 90%;
}

.t5bc {
    margin: 0rpx auto;
    text-indent: 2em;
    width: 90%;
}